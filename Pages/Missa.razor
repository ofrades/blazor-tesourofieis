@page "/missa"
@inject State State

<Row>
	@if(State.SidebarIsOpen){
    	<SideBar />
	}

	<Column ColumnSize="ColumnSize.Is10" Offset="Is2.WithOffset">
		<FetchMass />
	</Column>
</Row>

@code{
	protected override async Task OnInitializedAsync() {
		await State.GetToday();
		State.OnChange += StateHasChanged;
	}
	public void Dispose() {
		State.OnChange -= StateHasChanged;
	}
}
