@inherits LayoutComponentBase
@inject IStyled Styled
@inject State State
@using BlazorPro.BlazorSize

<Styled>
    body {
        background-color: [colors.background-color] !important;
        color: [colors.text-color] !important;
    }
    .card {
        background-color: [colors.background-color] !important;
        color: [colors.text-color] !important;
    }
    .list-group-item {
        background-color: [colors.background-color] !important;
        color: [colors.text-color] !important;
    }
</Styled>

<MediaQueryList>
  <MediaQuery Media="@Breakpoints.MediumDown">
    <Matched>
        <Navbarbottom />
    </Matched>
    <Unmatched>
        <Navbartop />
    </Unmatched>
  </MediaQuery>
</MediaQueryList>

  <div class="main">
      <div class="content">
          @Body
      </div>
  </div>

  <Footer />

@code{
	protected override async Task OnInitializedAsync() {
		await State.GetCalendar();
		Styled.SetThemeValue("colors.background-color", "#eee");
		Styled.SetThemeValue("colors.text-color", "#26313c");
		State.OnChange += StateHasChanged;
	}
}
